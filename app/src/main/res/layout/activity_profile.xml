<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="snowleopard.speakup.ProfileActivity"
    android:orientation="vertical"
    android:background="#f0ffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="155dp"
            android:layout_height="147dp"
            android:layout_marginLeft="99dp"
            android:layout_marginRight="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:padding="@dimen/cardview_compat_inset_shadow"
            android:background="@drawable/round_view"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="TextView"
            android:textAllCaps="true"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Stories:"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="23sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorCards"
            tools:context="snowleopard.speakup.ListViewActivity">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">


            </android.support.v7.widget.RecyclerView>


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>