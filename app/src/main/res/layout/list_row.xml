<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/num_Likes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_margin="8dp"
        android:background="#444444"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imgCard"
            android:layout_width="84dp"
            android:layout_height="match_parent"
            android:cropToPadding="true"
            android:onClick="viewActivity"
            android:scaleType="centerCrop"
            app:srcCompat="@color/cardview_light_background" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="title goes here"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:textColor="@color/finale"
                android:textSize="24sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:ems="10"
                android:hint="description comes here"
                android:inputType="textMultiLine"
                android:paddingLeft="5dp"
                android:textColor="@color/finale"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/owner_button"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.80"
                    android:background="#00ffffff"
                    android:text="Button" />

                <Button
                    android:id="@+id/view_button"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.80"
                    android:background="#00ffffff"
                    android:text="View Full Story"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="10sp" />

                <ImageButton
                    android:id="@+id/like_btn"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:background="#00ffffff"
                    android:scaleType="fitCenter"
                    app:srcCompat="@mipmap/ic_thumb_up_black_24dp" />

                <TextView
                    android:id="@+id/mNLike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.80"
                    android:text="0" />
                android:onClick="Like"/>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>

