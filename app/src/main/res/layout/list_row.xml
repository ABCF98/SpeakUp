<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/num_Likes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_margin="8dp"
        android:background="#ffd600"
        android:orientation="vertical">


        <ImageButton
            android:id="@+id/imgCard"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            android:layout_marginRight="0dp"
            app:srcCompat="@color/cardview_light_background"
            android:onClick="viewActivity"/>
            android:layout_width="84dp"
            android:layout_height="match_parent"
            android:cropToPadding="false"
            android:onClick="viewActivity"
            android:scaleType="centerInside"
            app:srcCompat="@color/cardview_light_background" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="0dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Title goes here"
                android:inputType="textPersonName"
                android:paddingLeft="2dp"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                android:onClick="viewActivity"/>


            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="330dp"
                android:layout_height="30dp"
                android:ems="10"
                android:hint="description comes here"
                android:inputType="textMultiLine"
                android:paddingLeft="2dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:onClick="viewActivity"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/owner_button"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.80"
                    android:ems="10"
                    android:hint="description comes here"
                    android:inputType="textMultiLine"
                    android:paddingLeft="5dp"
                    android:textColor="#000000"
                    android:background="#00ffffff"
                    android:text="Button" />

                <ImageButton
                    android:id="@+id/like_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="0dp"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="0dp"
                    android:background="#ffd600"
                    app:srcCompat="@mipmap/ic_thumb_up_black_24dp" />

                <TextView
                    android:id="@+id/mNLike"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.80"
                    android:text="0" />
                android:onClick="Like"/>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>

