<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/num_Likes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_margin="8dp"
        android:background="#ffd600"
        android:orientation="vertical">


        <ImageButton
            android:id="@+id/imgCard"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:backgroundTint="@color/colorButtons"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            android:padding="@dimen/cardview_compat_inset_shadow"
            app:srcCompat="@color/cardview_light_background" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="0dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Title goes here"
                android:inputType="textPersonName"
                android:paddingLeft="2dp"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="330dp"
                android:layout_height="30dp"
                android:ems="10"
                android:hint="Description comes here"
                android:inputType="textMultiLine"
                android:paddingLeft="2dp"
                android:textColor="#000000"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/owner_button"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.80"
                    android:background="#00ffffff"
                    android:ems="10"
                    android:textSize="10sp"
                    android:hint="description comes here"
                    android:inputType="textMultiLine"
                    android:paddingLeft="5dp"
                    android:text="Owner:"
                    android:textColor="#000000" />

                <ImageButton
                    android:id="@+id/like_btn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="0dp"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="3dp"
                    android:background="#ffd600"
                    android:layout_marginLeft="40dp"
                    app:srcCompat="@drawable/unliked"/>

                <TextView
                    android:id="@+id/mNLike"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.80"
                    android:textSize="18sp"
                    android:text=" 0"
                android:onClick="Like"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>

